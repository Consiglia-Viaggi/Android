            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity android:name=".LeMieRecensioni" />
        <activity android:name=".ProfiloUtenteRegistrato" />
        <activity android:name=".ScriviRecensioni" />
        <activity android:name=".RisultatoRicerca" />
        <activity android:name=".Ricerca" />
        <activity android:name=".RicercaAvanzata" />
        <activity android:name=".MainPosizione" />
        <activity android:name=".Registrazione" />
        <activity android:name=".RegistrazioneAccedi" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>