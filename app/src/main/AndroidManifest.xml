        <activity
            android:name=".EliminaAccount"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".ModificaAccount"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
